{{ define "Index" }}
  {{ template "Header" }}
    {{ template "Menu"  }}
    <h2> Tickets </h2>
    <table border="1">
      <thead>
      <tr>
        <td>ID</td>
        <td>User</td>
        <td>Description</td>
        <td>Details</td>
        <td>CC List</td>
        <td>View</td>
        <td>Edit</td>
        <td>Delete</td>
      </tr>
       </thead>
       <tbody>
    {{ range . }}
      <tr>
        <td>{{ .ID }}</td>
        <td> {{ .User }} </td>
        <td> {{ .Description }} </td>
        <td> {{ .Details }} </td>
        <td> {{ .CcList }} </td>
        <td><a href="/show?id={{ .ID }}">View</a></td>
        <td><a href="/edit?id={{ .ID }}">Edit</a></td>
        <td><a href="/delete?id={{ .ID }}" data-method="delete">Delete</a></td>
      </tr>
    {{ end }}
       </tbody>
    </table>
  {{ template "Footer" }}
{{ end }}